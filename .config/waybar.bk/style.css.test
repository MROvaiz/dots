/* Waybar Styling */
* {
  border: none;
  border-radius: 0;
  font-family: "JetBrainsMono Nerd Font", "Nerd Font Hack";
  font-size: 14px;
  min-height: 0;
}


#workspaces {
  margin: 8px 8px;
  margin-bottom: 0;
  margin-right: 0;
  border-radius: 8px;
  background: #333;
  transition-duration: 0.2s;
}

#workspaces button {
  padding: 0 10px;
  transition-duration: 0.2s;
  color: #f8f8f2;
  background: transparent;
  font-size: 14px;
}

#workspaces button:hover {
  transition-duration: 0.2s;
  box-shadow: inherit;
  text-shadow: inherit;
  color: #940919;
  background: #ffffff;
  border-radius: 8px;
}

#workspaces button.focused {
  color: #9CE1F0;
}

#workspaces button.active {
  background: #940919;
  border-radius: 8px;
  color: #ffffff;
}